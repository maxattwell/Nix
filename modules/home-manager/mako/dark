# Mako notification daemon configuration - Dark theme (Gruvbox)
# Matches waybar and rofi styling

# Font
font=Overpass Nerd Font 12

# Colors - Gruvbox Dark
background-color=#282828
text-color=#ebdbb2
border-color=#458588
progress-color=over #689d6a

# Layout
border-size=2
border-radius=7
padding=12
margin=10

# Position
anchor=top-right
max-visible=5
layer=overlay

# Dimensions
width=350
height=150

# Timeout (milliseconds, 0 = never)
default-timeout=5000
ignore-timeout=0

# Icons
icons=1
max-icon-size=48
icon-path=/run/current-system/sw/share/icons/Adwaita

# Grouping
group-by=app-name
max-history=10

# Urgency levels
[urgency=low]
border-color=#98971a
default-timeout=3000

[urgency=normal]
border-color=#458588
default-timeout=5000

[urgency=critical]
border-color=#cc241d
text-color=#fbf1c7
default-timeout=0
